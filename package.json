{
  "name": "CVsite",
  "version": "1.0.0",
  "description": "My personal website.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist && mkdir dist",

    "prebuild": "npm run clean",
    "build": "npm run build:css && npm run build:js && npm run build:html",
    "build:css": "stylus src/css/app.styl --out dist/ --compress && hashmark -s -l 8 -m hash.json dist/app.css 'dist/{name}.{hash}{ext}' && rimraf dist/app.css",
    "build:js": "rollup src/js/app.js | babel | uglifyjs | hashmark -s -l 8 -n dist/app.js -m hash.json 'dist/{name}.{hash}{ext}'",
    "build:html": "jade src/index.jade --out dist --obj hash.json",
    
    "test": "echo \"Error: no test specified\" && exit 1",
    
    "watch": "parallelshell \"npm run watch:css\" \"npm run watch:js\" \"npm run watch:html\"",
    "watch:css": "onchange 'src/css/*.styl' -- npm run build:css",
    "watch:js": "onchange 'src/js/*.js' -- npm run build:js",
    "watch:html": "onchange 'src/index.html' -- npm run build:html",
    
    "open:dev": "opener http://localhost:9090",
    "open:prod": "opener http://antoniovdlc.me",
    
    "serve": "http-server -p 9090 dist/",
    
    "dev": "npm run build && npm run open:dev && parallelshell \"npm run serve\" \"npm run watch\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AntonioVdlC/CVsite.git"
  },
  "keywords": [],
  "author": "Antonio Villagra De La Cruz <antonio.villagra.de.la.cruz@gmail.com> (http://antoniovdlc.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AntonioVdlC/CVsite/issues"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "hashmark": "^3.1.0",
    "http-server": "^0.8.5",
    "jade": "^1.11.0",
    "onchange": "^2.0.0",
    "opener": "^1.4.1",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.5.1",
    "rollup": "^0.25.1",
    "stylus": "^0.53.0",
    "uglify-js": "^2.6.1"
  }
}
