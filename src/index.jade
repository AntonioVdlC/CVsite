doctype html
html(lang="en")
	head
		meta(charset="utf-8")

		title Antonio Villagra De La Cruz
	
		link(href="#{locals['dist/app.css'].substr(5)}" rel="stylesheet")
		script(src="#{locals['dist/app.js'].substr(5)}" defer)

	body
		// Info Page
		div.page#info
			img.profile-picture(src="img/#{locals.picture}" alt="Profile Picture")

			h1.profile-name #{locals.name}
			h2.profile-title #{locals.title}

			ul.profile-links
				each link in locals.links
					li
						a(href="#{link.url}" target="_blank")
							img(src="img/logo/#{link.img}" alt="#{link.alt}")
