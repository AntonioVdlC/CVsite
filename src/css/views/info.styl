// Profile Picture
.profile-picture
	margin-top 10vh
	height 33vh
	border-radius 100%
	box-shadow 5px 5px 30px 0px rgba(50,50,50,0.67)

// Profile Name
.profile-name
	font-size 2.5em
	font-weight 700
	margin-top 0.5em
	margin-bottom 0

// Profile Title
.profile-title
	font-size 1.75em
	margin-top 0.25em
	margin-bottom 0

// Profile Links
.profile-links
	list-style none
	padding 0
	margin 0
	
	margin-top 1.5em
	
	li
		display inline
		
		img
			height 7.5vh
			margin 0.75vw
			
			opacity 0.5
			-webkit-filter grayscale(1)
			filter grayscale(1) 
			
			&:hover
				opacity 1
				-webkit-filter grayscale(0)
				filter grayscale(0) 

// About
.about-link
	margin-top calc(49.5vh - 12em)
	
	a
		text-decoration none
		text-transform uppercase
		color darkgrey
		opacity 0.5
		
		&:hover
			opacity 1
			
	&::after
		content ''
		position absolute
		left calc(50% - 1vh)
		top calc(100vh - 2vh)
		width 0
		height 0
		border-left 1vh solid transparent
		border-right 1vh solid transparent
		border-top 1vh solid darkgrey
		clear both