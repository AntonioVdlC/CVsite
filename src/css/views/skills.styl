// Skills Filters
.skills-filters
	list-style none
	margin 0 5vw
	padding 10vh 0
	
	li
		display inline
		padding 1vw
		text-transform uppercase
		
		&::after
			content '|'
			padding-left 2vw
		
		&:nth-last-of-type(1)
			&::after
				content ''

// Skills Cloud
.skills-cloud
	list-style none
	margin 0
	padding 0
	width 80vw
	padding-left 10vw
	
	li
		display inline-block
		padding 1.5vh 1vw
		
		levelSizes = 1.5 2 3 4 5 
		for size, i in levelSizes
			&.level-{i+1}
				font-size size em

// Colors
colors = {
	database: red,
	mobile: peru,
	programming: darkorange,
	tools: lightgrey,
	web: pink
}

for class, color in colors 
	.{class}
		.filter-name
		.skill-name
			&:hover
			&.active
				color color
				cursor pointer
